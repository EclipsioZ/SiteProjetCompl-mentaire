{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}


<!-- forme du formulaire d'inscription -->

 <div class="row justify-content-center mt-5" >
 <div class="card fat"> <!--Creation de la carte contenant la mise en page du formulaire -->
   <div class="card-body">
 <form> <!-- formulaire d'inscription -->


    <h2 class="text-center">S'inscrire</h2>
    <p style="color:red; text-align:center;">{{ error is defined ? error : '' }}</p>

    <!-- saisi nom & prenom-->
    <div class="form-group mt-4">

      <div class="row ">
        <div class="col">
        <label>Prenom </label>
          <input type="FirstName" name="firstname" class="form-control" required="required" placeholder="Entrer votre prénom">
        </div>
        <div class="col">
        <label>Nom </label>
          <input type="LastName" name="lastname" class="form-control" required="required" placeholder="Entrer votre nom de famille ">
        </div>
      </div>
    </div>

    <!-- saisi email -->

    <div class="form-group">
      <label for="exampleInputEmail1">Adresse mail</label>
      <input type="email" name="mail" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"  required="required" placeholder="Entrer votre email">
    </div>

    <!-- saisi mot de passe -->
    <div class="form-group">
      <label for="exampleInputPassword1">mot de passe</label>
      <input type="password" name="password" class="form-control" id="exampleInputPassword1" required="required" placeholder="Entrer votre mot de passe">
    </div>

   <!-- bouton "s'incrire" -->
    <div class="container">
  <div class="row">
    <div class="col text-center mt-3">
      <button class="btn btn-primary md-center " type="submit"><h4>Inscription</h4></button>
      <button class="btn btn-primary md-center " type="submit"><h4><a href="/user/login" style="text-decoration: none;color: white">Se connecter</a></h4></button>
    </div>
  </div>
  </div>
 </form>
</div>
</div>
</div>


<footer class="footer fixed-bottom bg-primary text-center mt-5" style="margin-top: 20px"><!--Footer-->
  <p><a class="text-light" href="/home/legal" style="margin-top: 10px">Mention légales</a> - <a class="text-light" href="/home/saleCondition" style="margin-top: 10px">CGV</a> - <a class="text-light" href="https://www.cesi.fr/" target="_blank" style="margin-top: 10px">Propulsé par Cesi </a></p>
</footer>

<style>
body {
  margin-top: 200px;
}

.footer {

  height: 50px;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
</style>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<!-- forme du formulaire de contact -->

 <div class="row justify-content-center mt-5" >
 <div class="card fat"> <!--Creationde la carte contenant la mise en page du formulaire -->
   <div class="card-body">
 <form> <!-- formulaire de contact -->

      <h2 class="text-center">Se connecter</h2>
      <p style="color:red; text-align:center;">{{ error is defined ? error : '' }}</p>
    <!-- saisi email -->

    <div class="form-group mt-4">
      <label for="mail">Adresse mail</label>
      <input type="email" class="form-control" id="mail" name="mail" aria-describedby="emailHelp" required="required" placeholder="Entrer votre email" value="{{ data is defined ? data.mail : '' }}">
    </div>

    <!-- saisi mot de passe -->
    <div class="form-group">
      <label for="password">mot de passe</label>
      <input type="password" class="form-control" id="pass" name="password" required="required" placeholder="Entrer votre mot de passe">
    </div>

    <!-- bouton "se connecter" -->
     <div class="container">
   <div class="row">
     <div class="col text-center mt-3">
       <button class="btn btn-primary md-center " type="submit"><h4>Connexion</h4></button>
       <button class="btn btn-primary md-center " type="submit"><h4><a href="/user/signup" style="text-decoration: none;color: white">S'inscrire</a></h4></button>
     </div>
     </div>
    </div>
 </form>
</div>
</div>
</div>

<style>
body {
  margin-top: 55px;
}
</style>
{% endblock %}

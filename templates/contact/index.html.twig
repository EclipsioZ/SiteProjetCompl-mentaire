{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<form> <!-- formulaire de contact -->
  <fieldset>
    <legend>Nous contacter</legend>
    <!-- saisi nom -->

    <div class="form-group">
      <label>Nom et prénom</label>
      <div class="row">
        <div class="col">
          <input type="FirstName" class="form-control"  placeholder="Entrer votre prénom">
        </div>
        <div class="col">
          <input type="LastName" class="form-control"  placeholder="Entrer votre nom de famille ">
        </div>
      </div>

    <!-- saisi email -->
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Adresse mail</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Entrer votre email">

    </div>
    <!--<div class="form-group">
      <label for="exampleInputPassword1">mot de passes</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>-->
      <!-- saisi message -->
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Votre Message</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Entrer votre message"></textarea>
    </div>

    <button class="btn btn-primary " type="submit">Envoyer</button>
</form>
{% endblock %}

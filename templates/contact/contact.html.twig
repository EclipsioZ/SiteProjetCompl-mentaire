{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<!-- forme du formulaire de contact -->

 <div class="row justify-content-center mt-5" >
 <div class="card fat"> <!--Creationde la carte contenant la mise en page du formulaire -->
   <div class="card-body">
 <form action="/contact/new"> <!-- formulaire de contact -->
  <fieldset>
    <h2 class="text-center">Nous contacter</h2>

    <!-- saisi nom -->
    <div class="form-group mt-5">

      <div class="row ">
        <div class="col">
        <label>Prénom</label>
          <input type="FirstName" class="form-control"  placeholder="Entrer votre prénom" name="firstname" value="{{ user.firstname is defined ? user.firstname : '' }}" {{ user.firstname is defined ? "readonly" : ""}}>
        </div>
        <div class="col">
        <label>Nom</label>
          <input type="LastName" class="form-control"  placeholder="Entrer votre nom de famille " name="lastname" value="{{ user.lastname is defined ? user.lastname : '' }}" {{ user.lastname is defined ? "readonly" : ""}}>
        </div>
      </div>
    </div>


    <!-- saisi email -->

    <div class="form-group">
      <label for="exampleInputEmail1">Adresse mail</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Entrer votre email" name="mail" value="{{ user.mail is defined ? user.mail : '' }}" {{ user.mail is defined ? "readonly" : ""}}>
    </div>

      <!-- saisi message -->
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Votre Message</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Entrer votre message" name="message" required="required"></textarea>
    </div>
    <div class="container">
  <div class="row">
    <div class="col text-center mt-3">
      <button class="btn btn-primary md-center " type="submit"><h4>Envoyer</h4></button>
    </div>
 </form>
  </div>
  </div>
</div>

<style>
body {
  margin-top: 200px;
}
</style>
{% endblock %}
